<Window x:Class="Lab_7.DeleteAnimal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_7"
        mc:Ignorable="d"
        Title="DeleteAnimal" Height="150" Width="500" Background="Aqua">
    <Grid>
        <TextBox x:Name="animalId" FontSize="20" HorizontalAlignment="Right" Height="34" TextWrapping="Wrap" VerticalAlignment="Top" Width="400" Margin="0,34,58,0"/>

        <Label Content="Id:" FontSize="18" HorizontalAlignment="Left"  VerticalAlignment="Top" Margin="0,34,0,0"/>
        <Label Content="Delete Animal" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" FontStyle="Normal" Margin="189,0,119,0" Width="184"/>
        <Button x:Name="delAnimal" Content="Delete Animal" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Height="30" Click="delAnimal_Click" Margin="189,73,0,0"/>
        <Button x:Name="backBtn" Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="90" Height="30" Click="backBtn_Click" Margin="344,73,0,0"/>

    </Grid>
</Window>
